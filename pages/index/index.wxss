.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.list {
  width: 100%;
  margin-top: 20px;
  
}

.list .title {
  text-align: center;
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.list .operation-btn {
  display: block;
  text-align: left;
  white-space: nowrap;
}